      - [{name: 'english', code: 'en'}, {name: 'deutsch', code: 'de'}, {name: 'fran√ßais', code: 'fr'}, {name: 'italiano', code: 'it', }, {name: 'nederlands', code: 'nl'}, {name: 'polski', code: 'pl'}].each do |language|

        - klass = 'button secondary'
        - if params[:locale] == language[:code]
          - klass = "#{klass} active"
